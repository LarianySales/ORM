<h1>Edite: {{user.name}} 😷</h1>
<a href="/">Voltar</a>
<form action="/users/update" method="post" class="form">
    <input type="hidden" name="id" value="{{user.id}}">
    <div class="form-control">
        <label for="name">Nome: </label>
        <input type="text" name="name" value="{{user.name}}">
    </div>

    <div class="form-control">
        <label for="occupation">Profissão: </label>
        <input type="text" name="occupation" value="{{user.occupation}}">
    </div>

    <div class="form-control form-checkbox">
        {{#if user.newsletter}}
        <input type="checkbox" name="newsletter" checked>

        {{else}}
        <input type="checkbox" name="newsletter">

        {{/if}}
        <label for="newsletter">Enviar promoções?</label>
    </div>

    <div class="form-control">
        <input type="submit" value="Atualizar">
    </div>

</form>


<div class="address-container">
    <h1>Endereços:</h1>
    <form action="/address/create" method="post" class="form">
    <input type="hidden" name="UserId" value="{{user.id}}">

        <div class="form-control">
            <label for="street">Rua:</label>
            <input type="text" name="street" placeholder="Digite o nome da rua">
        </div>
        <div class="form-control">
            <label for="number">Número:</label>
            <input type="text" name="number" placeholder="Digite o número da casa">
        </div>
        <div class="form-control">
            <label for="city">Cidade:</label>
            <input type="text" name="city" placeholder="Digite o nome da cidade">
        </div>
        <input type="submit" value="Incluir Endereço">
    </form>

<div class="address-list">
    <h2>Listar de endereços:</h2>
    {{#each user.Addresses}}
    <div>
        🏡 {{this.id}} - 
        {{this.street}} - 
        {{this.number}} - 
        {{this.city}} 🪦.
        <form action="/address/delete" method="post">
        <input type="hidden" name="id" value="{{this.id}}">
        <input type="hidden" name="UserId" value="{{user.UserId}}">
        <input type="submit" value="Excluir Registro">
        </form>
    </div>
    {{/each}}
</div>

</div>
